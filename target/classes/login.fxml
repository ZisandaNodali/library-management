<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.library.LoginController" alignment="CENTER" spacing="10" style="-fx-padding: 20;">
    
    <Label text="Library Management System" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button text="Login" onAction="#handleLogin" maxWidth="100" />
    <Label fx:id="statusLabel" />
</VBox>
